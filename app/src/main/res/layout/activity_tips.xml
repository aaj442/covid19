<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipsActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linTips"
        android:layout_below="@+id/toolbar"
        >


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/coronavirus"
            android:id="@+id/ivListActivity"
            android:layout_margin="20dp"
            >


        </ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/segoeuisl"
            android:textSize="12pt"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/txtListActivity"
            >



        </TextView>



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="15dp"
        android:background="@color/white"
        android:layout_below="@+id/linTips"

        android:clipToPadding="false"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/cdVideo"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/blue_gradient"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"



                    android:paddingTop="2dp"
                    app:srcCompat="@drawable/video_gallery"
                    tools:ignore="VectorDrawableCompat" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txtCorona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"



                        android:fontFamily="@font/segoeuib"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/videos"


                        android:textColor="@color/Black"
                        android:textSize="8pt"


                        />

                </RelativeLayout>




            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/cdPosters"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/blue_gradient"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginTop="5dp"


                    android:paddingTop="2dp"
                    app:srcCompat="@drawable/image_gallery"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/txtSym"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"


                    android:fontFamily="@font/segoeuib"
                    android:gravity="center"
                    android:text="@string/posters"
                    android:textColor="@color/Black"
                    android:textSize="8pt"


                    />


            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>




</RelativeLayout>