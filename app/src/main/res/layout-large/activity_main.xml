<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolBar_Main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"


            android:background="@color/white"
            app:layout_collapseMode="pin">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:fontFamily="@font/segoeuisl"
                android:textColor="@color/Black"
                android:textSize="12pt"



                />

            <ImageView
                android:id="@+id/ivAMainIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/covid_19"
                />

            <ImageView
                android:id="@+id/ivBackDate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"


                />


        </androidx.appcompat.widget.Toolbar>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ln1"
        android:layout_below="@+id/linearTool"
        android:orientation="vertical"
        android:background="@color/white"


        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/white"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/SliderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="20dp"

                        >

                    </com.daimajia.slider.library.SliderLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/ln2"


                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"

                        android:layout_margin="10dp"
                        android:background="@color/white"

                        android:clipToPadding="false"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/cdCorona"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="30dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/blue_gradient"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="5dp"



                                    android:paddingTop="2dp"
                                    app:srcCompat="@drawable/coronavirus"
                                    tools:ignore="VectorDrawableCompat" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >

                                    <TextView
                                        android:id="@+id/txtCorona"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"



                                        android:fontFamily="@font/segoeui"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/coronavirus"


                                        android:textColor="@color/Black"
                                        android:textSize="9pt"


                                        />

                                </RelativeLayout>




                            </LinearLayout>



                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/cdSym"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/blue_gradient"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="5dp"


                                    android:paddingTop="2dp"
                                    app:srcCompat="@drawable/cough"
                                    tools:ignore="VectorDrawableCompat" />

                                <TextView
                                    android:id="@+id/txtSym"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"


                                    android:fontFamily="@font/segoeui"
                                    android:gravity="center"
                                    android:text="@string/symptoms"
                                    android:textColor="@color/Black"
                                    android:textSize="9pt"


                                    />


                            </LinearLayout>



                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"

                        android:layout_margin="10dp"
                        android:background="@color/white"

                        android:clipToPadding="false"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/cdPrevent"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="30dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/blue_gradient"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="5dp"


                                    android:paddingTop="2dp"
                                    app:srcCompat="@drawable/wash_your_hands"
                                    tools:ignore="VectorDrawableCompat" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/txtPrevent"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginBottom="2dp"

                                        android:fontFamily="@font/segoeui"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/prevent"
                                        android:padding="2dp"

                                        android:textColor="@color/Black"
                                        android:textSize="9pt"


                                        />

                                </RelativeLayout>




                            </LinearLayout>



                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/cdMask"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/blue_gradient"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="5dp"


                                    android:paddingTop="2dp"
                                    app:srcCompat="@drawable/mask"
                                    tools:ignore="VectorDrawableCompat" />

                                <TextView
                                    android:id="@+id/txtMask"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"

                                    android:fontFamily="@font/segoeui"
                                    android:gravity="center"
                                    android:text="@string/use_mask"
                                    android:textColor="@color/Black"
                                    android:textSize="9pt"


                                    />


                            </LinearLayout>



                        </androidx.cardview.widget.CardView>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"

                        android:layout_margin="10dp"
                        android:background="@color/white"

                        android:clipToPadding="false"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/cdTips"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="30dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/blue_gradient"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="5dp"


                                    android:paddingTop="2dp"
                                    app:srcCompat="@drawable/tips"
                                    tools:ignore="VectorDrawableCompat" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/txtTips"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginBottom="2dp"

                                        android:fontFamily="@font/segoeui"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/tips"

                                        android:textColor="@color/Black"
                                        android:textSize="9pt"


                                        />

                                </RelativeLayout>




                            </LinearLayout>



                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/cdQuestions"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/blue_gradient"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="5dp"


                                    android:paddingTop="2dp"
                                    app:srcCompat="@drawable/fake_news"
                                    tools:ignore="VectorDrawableCompat" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/txtQuestions"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginBottom="2dp"

                                        android:fontFamily="@font/segoeui"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/Q_A"

                                        android:textColor="@color/Black"
                                        android:textSize="9pt"


                                        />

                                </RelativeLayout>




                            </LinearLayout>



                        </androidx.cardview.widget.CardView>






                    </LinearLayout>










                </LinearLayout>






            </LinearLayout>









        </ScrollView>



    </LinearLayout>





</RelativeLayout>